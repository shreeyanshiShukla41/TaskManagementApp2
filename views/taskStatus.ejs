<div style="padding: 20px;">
  <input type="hidden" value="<%= pending %>" id="pending" />
  <input type="hidden" value="<%= ongoing %>" id="ongoing" />
  <input type="hidden" value="<%= completed %>" id="completed" />

  <div style="width: 200px; height: 200px">
    <canvas id="taskChart" width="100" height="200"></canvas>
  </div>
</div>
<script>
  const ctx = document.getElementById("taskChart").getContext("2d");

  // Sample task data
  const taskStatus = ["Pending", "In Progress", "Completed"];
  const pendingTasks = document.getElementById("pending").value;
  const ongoingTasks = document.getElementById("ongoing").value;
  const inprogressTasks = document.getElementById("completed").value;

  console.log(pendingTasks, ongoingTasks, inprogressTasks);
  const taskCount = [pendingTasks, ongoingTasks, inprogressTasks]; // Example data

  new Chart(ctx, {
    type: "pie", // Change to 'bar', 'line', etc.
    data: {
      labels: taskStatus,
      datasets: [
        {
          label: "Tasks",
          data: taskCount,
          backgroundColor: ["red", "orange", "green"],
        },
      ],
    },
  });
</script>
